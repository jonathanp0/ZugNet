  <profile name="Default">
    <Mappings>
      <XKeysInput>
        <Key ID="1">
          <type>normal</type>
          <topic>zusi/control/handbrake/aus</topic>
          <on><blue>off</blue><red>on</red></on>
          <off><blue>off</blue><red>off</red></off>
