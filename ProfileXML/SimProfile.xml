  <profile name="Train Simulator">
    <Mappings>
      <keypressOutput>
        <!-- Time Control -->
        <keypress>
          <topic>zusi/control/pause</topic>
          <toggle>
            <activate>ESCAPE</activate>
            <deactivate>ESCAPE</deactivate>
          </toggle>
        </keypress>
        <!-- View Control -->
			  <keypress>
			    <topic>zusi/control/blick/links</topic>
			    <hold>LEFT_ARROW</hold>
			  </keypress>
			  <keypress>
			    <topic>zusi/control/blick/rechts</topic>
			    <hold>RIGHT_ARROW</hold>
			  </keypress>  
			  <keypress>
			    <topic>zusi/control/blick/vor</topic>
			    <hold>UP_ARROW</hold>
			  </keypress>  
			  <keypress>
			    <topic>zusi/control/blick/hinter</topic>
			    <hold>DOWN_ARROW</hold>
			  </keypress>
			  <keypress>
			    <topic>zusi/control/blick/change</topic>
			    <sequence>
				    <step>KEY_1</step>
				    <step>KEY_2</step>
				    <step>KEY_3</step>
            <step>KEY_4</step>
				    <step>KEY_5</step>
				    <step>KEY_6</step>
            <step>KEY_7</step>
				    <step>KEY_8</step>
			    </sequence>
			  </keypress>
        <keypress>
           <topic>zusi/control/display/fuehrerstand</topic>
           <hold>KEY_1</hold>
        </keypress>
        <keypress>
          <topic>zusi/control/display/fuehrerstandplus</topic>
          <toggle>
            <activate shift="true">KEY_2</activate>
            <deactivate>DOWN_ARROW</deactivate>
          </toggle>
        </keypress>
        <!-- Windows -->
        <keypress>
          <topic>zusi/control/display/fahrplan</topic>
          <hold>F1</hold>
        </keypress>
        <keypress>
          <topic>zusi/control/display/cheat</topic>
          <hold>F3</hold>
        </keypress>
        <keypress>
          <topic>zusi/control/display/menu</topic>
          <hold>F4</hold>
        </keypress>
        <keypress>
          <topic>zusi/control/display/data</topic>
          <hold>F5</hold>
        </keypress>
        <!-- Simulation -->
        <keypress>
          <topic>zusi/control/sifa</topic>
          <hold>NUMPAD_ENTER</hold>
        </keypress>
        <keypress>
          <topic>zusi/control/setup</topic>
          <sequence>
				    <step ctrl="true">NUMPAD_ENTER</step>
				    <step shift="true">NUMPAD_ENTER</step>
			    </sequence>
        </keypress>
        <keypress>
          <topic>zusi/control/afb</topic>
          <toggle>
            <activate>KEY_A</activate>
            <deactivate>KEY_A</deactivate>
          </toggle>
        </keypress>
        <keypress>
          <topic>zusi/control/handbrake/ein</topic>
          <hold shift="true">KEY_7</hold>
        </keypress>
        <keypress>
          <topic>zusi/control/handbrake/aus</topic>
          <hold shift="true">KEY_7</hold>
        </keypress>
        <keypress>
          <topic>zusi/control/wipers</topic>
          <toggle>
            <activate>KEY_V</activate>
            <deactivate shift="true">KEY_V</deactivate>
          </toggle>
        </keypress>
      </keypressOutput>
    </Mappings>
  </profile>
