      </XKeysInput>
      <keypressOutput>
        <keypress>
          <topic>zusi/control/sifa</topic>
          <hold>KEY_P</hold>
        </keypress>
        <keypress>
          <topic>zusi/control/fsb</topic>
          <toggle>
            <activate>KEY_A</activate>
            <deactivate>KEY_B</deactivate>
          </toggle>
        </keypress>
        <keypress>
          <topic>zusi/control/links</topic>
          <sequence>
            <step>KEY_C</step>
            <step>KEY_D</step>
            <step>KEY_E</step>
            <step>KEY_F</step>
            <step>KEY_G</step>
          </sequence>
        </keypress>

        <keypress>
          <topic>zusi/control/pause</topic>
          <toggle>
            <activate>F2</activate>
            <deactivate>F2</deactivate>
          </toggle>
        </keypress>

        <keypress>
          <topic>zusi/control/pfeil</topic>
          <hold>KEY_P</hold>
        </keypress>
      
        <keypress>
          <topic>zusi/control/blick/links</topic>
          <hold>LEFT_ARROW</hold>
        </keypress>
        <keypress>
          <topic>zusi/control/blick/rechts</topic>
          <hold>RIGHT_ARROW</hold>
        </keypress>  
        <keypress>
          <topic>zusi/control/blick/vor</topic>
          <hold>UP_ARROW</hold>
        </keypress>  
        <keypress>
          <topic>zusi/control/blick/hinter</topic>
          <hold>DOWN_ARROW</hold>
        </keypress>  
  
      </keypressOutput>
